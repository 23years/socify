<div id="post-<%= post.id %>" class="post">
  <div class="row">
    <div class="post-user-info">
      <%= render 'shared/avatar', user: post.user %>
      <h4 class="name"><%= link_to post.user.name, user_path(post.user) %></h4>
    </div>
    <div class="actions">
      <%= render 'posts/actions', is_editable: ((defined?(is_editable) && is_editable) || false), post: post %>
    </div>
  </div>
  <div class="row">
    <div class="post-created-at">
      <%= render 'shared/created_at', resource: post %>
    </div>
  </div>
  <div class="row">
    <div class="post-content">
      <div class="content-html">
        <%= post.content.html_safe %>
      </div>
      <% if post.attachment.present? %>
        <%= react_component 'ImagePreview', {src: post.attachment.url} %>
      <% elsif post.preview_html.present? %>
        <%= react_component 'LinkPreview', {html: post.preview_html} %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="like-and-comment">
      <%= render 'shared/like_and_comment', resource: post %>
    </div>
  </div>
  <div class="row">
    <%= render 'comments/comments_block', resource: post, expand: (defined?(expand_comments) && expand_comments) %>
  </div>
</div>
