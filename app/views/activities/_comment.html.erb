<div id="comment-<%= comment.id %>" class="comment-activity">
  <div class="row">
    <div class="activity-user-info">
      <%= render 'shared/avatar', user: comment.user %>
      <h4 class="name"><%= link_to comment.user.name, user_path(comment.user) %></h4>
      commented on a <%= link_to comment.commentable_type.downcase, comment.commentable %>
    </div>
  </div>
  <div class="row">
    <div class="activity-created-at">
      <%= render 'shared/created_at', resource: comment %>
    </div>
  </div>
  <div class="row">
    <div class="comment-activity-content">
      <span class="text"><%= comment.comment.html_safe %></span>
    </div>
  </div>
  <div class="row">
    <div class="comment-activity-commentable">
      <%= render comment.commentable %>
    </div>
  </div>
</div>
